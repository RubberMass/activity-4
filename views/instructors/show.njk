{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section
            class="avatar"
            style="background: url({{ teachers.avatar_url }}) no-repeat center center/ cover ">
        </section>
        <section class= details>

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo:</div>
                <div>{{teachers.name}}</div>
            </div>

            <div class="item">
                <div>Idade:</div>
                <div>{{teachers.age}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade:</div>
                <div>{{teachers.grau}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula:</div>
                <div> <span>{{teachers.aula}}</span></div>
            </div>

            <div class="item">
                <div>Acompanhamento:</div>
                <div>
                    {% for services in teachers.services %}
                    <span>{{ services }}</span>
                    {% endfor %}
                </div>
            </div>

            <a href="/teachers/{{teachers.id}}/edit" class="button">Editar</a>
            
        </section>

    </div>

{% endblock content %}